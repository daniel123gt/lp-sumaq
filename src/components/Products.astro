	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header h2 {
		font-size: 3rem;
		font-weight: 800;
		color: #32411c;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #425c25 0%, #9f5818 100%);
