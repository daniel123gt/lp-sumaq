<style>
  .contact {
    padding: 6rem 0;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 800;
    color: #32411C;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #425C25 0%, #9F5818 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.25rem;
    color: #32411C;
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .contact-info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .info-card {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(66, 92, 37, 0.1);
    text-align: center;
    transition: transform 0.3s ease;
  }

  .info-card:hover {
    transform: translateY(-5px);
  }

  .info-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1rem;
    background: linear-gradient(135deg, #425C25 0%, #9F5818 100%);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-location, .icon-phone, .icon-email, .icon-time {
    width: 30px;
    height: 30px;
    background: white;
    border-radius: 6px;
    position: relative;
  }

  .icon-location::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    background: #425C25;
    border-radius: 50%;
    box-shadow: 0 0 0 2px #425C25;
  }

  .icon-phone::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    background: #9F5818;
    border-radius: 2px;
    box-shadow: 0 0 0 2px #9F5818;
  }

  .icon-email::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    background: #B08919;
    border-radius: 2px;
  }

  .icon-time::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    background: #425C25;
    border-radius: 50%;
    box-shadow: 0 0 0 3px #425C25;
  }

  .info-card h3 {
    font-size: 1.2rem;
    font-weight: 700;
    color: #32411C;
    margin-bottom: 1rem;
  }

  .info-card p {
    color: #32411C;
    opacity: 0.8;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .contact-info-section {
    background: white;
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 15px 40px rgba(66, 92, 37, 0.1);
  }

  .contact-info-section h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #32411C;
    margin-bottom: 2rem;
    text-align: center;
  }

  .services-overview {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .service-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
