      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      margin-top: 1.5rem;
    }

    .value-item {
      text-align: center;
      padding: 1.5rem;
      background: white;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(66, 92, 37, 0.1);
      border: 1px solid rgba(66, 92, 37, 0.05);
      transition: all 0.3s ease;
    }

    .value-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 40px rgba(66, 92, 37, 0.15);
    }

    .value-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .value-item h4 {
