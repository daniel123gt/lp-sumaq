---
// Página "Contacto" para SUMAQ AGRO
import Header from '../components/Header.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo-vertical.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>Contacto SUMAQ AGRO - Formulario de Contacto y Ubicación | Agricultura Sostenible</title>
		<meta name="description" content="Contacta con SUMAQ AGRO. Formulario de contacto, información de ubicación, teléfonos y emails para consultas sobre servicios y productos agrícolas." />
		<meta name="keywords" content="contacto SUMAQ AGRO, formulario contacto, ubicación empresa, teléfono email, consultas agrícolas" />
		<meta name="author" content="SUMAQ AGRO" />
		
		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content="Contacto SUMAQ AGRO - Estamos Aquí para Ayudarte" />
		<meta property="og:description" content="Estamos aquí para ayudarte. Ponte en contacto con nuestro equipo de expertos." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://sumaqagro.com/contacto" />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Preconnect to external resources -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Google Fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
		
		<!-- Global Styles -->
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body>
		<!-- Header -->
		<Header />
		
		<!-- Contact Section -->
		<Contact />
		
		<!-- Footer -->
		<Footer />
		
		<!-- Smooth Scrolling Script -->
		<script>
			// Smooth scrolling for anchor links
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', (e: Event) => {
					e.preventDefault();
					const target = document.querySelector((anchor as HTMLAnchorElement).getAttribute('href') || '');
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				});
			});
		</script>
	</body>
</html>
